{
  "manifest_version": 3,
  "name": "ThinkBoard",
  "version": "1.0",
  "description": "A modern tool to enhance your thinking and learning.",
  "permissions": [
    "sidePanel",
    "storage" 
  ],
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open ThinkBoard Notes"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}